//计算n!
#include<stdio.h>

int main()
{
	int i = 0, n = 0, ret = 1;
	scanf("%d", &n);
	for (i = 1; i <= n; i++)
	{
		ret = ret*i;
	}
	printf("%d\n", ret);
	return 0;
}


